<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material"
            android:weightSum="1">
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/username"
                android:layout_height="40dip"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#830303"
                android:hint="Username" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#830303"
                android:hint="Password" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:id="@+id/address"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#830303"
                android:hint="Address" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:id="@+id/phonenum"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#830303"
                android:hint="Phone Num" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/emailid"
                android:layout_height="40dip"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:layout_gravity="center_horizontal"
                android:hint="Email" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                android:id="@+id/bloodgroup"
                android:spinnerMode="dialog"
                android:entries="@array/bloodgroup"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/status">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DONOR"
                    android:id="@+id/donor"
                    android:backgroundTint="#830303"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECIEVER"
                    android:id="@+id/reciever"
                    android:backgroundTint="#830303"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:checked="false" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOTH"
                    android:id="@+id/both"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:checked="false"/>
            </RadioGroup>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="REGISTER"
                android:id="@+id/register"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>